{
  "kind": "collectionType",
  "collectionName": "article_templates",
  "info": {
    "singularName": "article-template",
    "pluralName": "article-templates",
    "displayName": "Article Template",
    "description": "文稿模板管理"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "required": true,
      "unique": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "sponsored",
        "news",
        "review"
      ]
    },
    "footerHtml": {
      "type": "text",
      "required": true
    },
    "footerAdvertising": {
      "type": "text"
    },
    "headerNote": {
      "type": "string",
      "maxLength": 200
    },
    "defaultAuthor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author"
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    }
  }
}