{
  "kind": "singleType",
  "collectionName": "wordpress_settings",
  "info": {
    "singularName": "wordpress-setting",
    "pluralName": "wordpress-settings",
    "displayName": "WordPress Settings",
    "description": "WordPress 發布設定"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "default": "網站名稱"
    },
    "siteUrl": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "defaultCategory": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "default": "未分類"
    },
    "defaultTags": {
      "type": "text",
      "default": ""
    },
    "defaultStatus": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "draft",
        "pending",
        "publish",
        "private"
      ],
      "default": "draft"
    },
    "defaultAuthor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author"
    },
    "autoPublish": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "featuredImageRequired": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "customFooterHtml": {
      "type": "text",
      "default": ""
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160,
      "default": ""
    },
    "seoSettings": {
      "type": "json",
      "default": {}
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    }
  }
}